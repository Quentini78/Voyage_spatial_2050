pipeline {
  agent any
  /*Declaration des etapes de contructions du Pipeline*/
  stages {
    stage('Embauche'){
      steps{
        script {
          echo "Recherche d'un ingenieur"
          sleep 5
          echo "Ingenieur trouve"
        }
      }
    }
    stage('Chargement'){
      steps{
        script {
          echo "Mise en place d'un nouveau systeme"
          sleep 10
          echo "Reduction du chargement des listes des vols"
        }
      }
    }
    stage('Promovoir'){
      steps{
        script {
          echo "Pub pour les soldes d'ete"
        }
      }
    }
    stage('Maintenir'){
      steps{
        script {
          echo "Checking des reservoirs"
          sleep 10
          echo "Concentration des reservoires maintenus"
        }
      }
    }
    stage('Reduire'){
      steps{
        script {
          echo "Reduction de la vitesse"
          sleep 10
          echo "Consommation du carburant reduite"
        }
      }
    }
    stage('Mise a jour'){
      steps{
        script {
          echo "Ecriture des nouvelles dates"
          sleep 5
          echo "Dates mises a jour"
        }
      }
    }
    stage('build'){
      steps{
        script {
          echo "Checking de la coque"
          sleep 10
          echo "Integrite de la coque a 100%"
        }
      }
    }
    stage('Test'){
      steps{
        script {
          echo "Verification des equipements de navigation"
          sleep 5
          echo "Leger disfonctionnement de la carte numerique"
        }
      }
    }
    stage('Deploy'){
      steps{
        script {
          echo "Verifications des eauipements de communication"
          sleep 5
          echo "Test radio OK"
        }
      }
    }
  }
}
